---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog'))
  .filter((post) => post.data.lang === 'fr')
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const base = import.meta.env.BASE_URL;

function formatDate(date: Date): string {
  return date.toLocaleDateString('fr-CA', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title="Blogue - John Cormier" description="Réflexions sur l'entrepreneuriat, la science, l'innovation, le leadership et plus encore par John Cormier." lang="fr">
  <section class="blog-header">
    <h1>Blogue</h1>
    <p>Réflexions sur la science, l'innovation, l'entrepreneuriat et plus encore.</p>
  </section>

  <section class="blog-list">
    {posts.length === 0 ? (
      <p class="no-posts">Aucun article pour le moment. Revenez bientôt !</p>
    ) : (
      <ul>
        {posts.map((post) => (
          <li>
            <a href={`${base}fr/blog/${post.id}`} class="post-card">
              <div class="post-meta">
                <time datetime={post.data.pubDate.toISOString()}>
                  {formatDate(post.data.pubDate)}
                </time>
                {post.data.tags && (
                  <div class="post-tags">
                    {post.data.tags.map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
              <h2>{post.data.title}</h2>
              <p>{post.data.description}</p>
            </a>
          </li>
        ))}
      </ul>
    )}
  </section>
</BaseLayout>

<style>
  .blog-header {
    padding: 3rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .blog-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .blog-header p {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  .blog-list {
    padding: 2rem 0;
  }

  .blog-list ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .post-card {
    display: block;
    padding: 1.5rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    transition: border-color 0.2s;
  }

  .post-card:hover {
    border-color: var(--color-accent);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .post-meta time {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--color-accent);
    background: rgba(59, 130, 246, 0.1);
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
  }

  .post-card h2 {
    font-size: 1.25rem;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .post-card p {
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .no-posts {
    color: var(--color-text-muted);
    text-align: center;
    padding: 3rem 0;
  }
</style>
