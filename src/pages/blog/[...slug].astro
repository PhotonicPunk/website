---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}

const post = Astro.props;
const { Content } = await render(post);
const base = import.meta.env.BASE_URL;

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title={`${post.data.title} | John Gerald Cormier`} description={post.data.description}>
  <article class="blog-post">
    <header>
      <a href={`${base}blog`} class="back-link">&larr; Back to Blog</a>
      <h1>{post.data.title}</h1>
      <div class="post-meta">
        <time datetime={post.data.pubDate.toISOString()}>
          {formatDate(post.data.pubDate)}
        </time>
        {post.data.updatedDate && (
          <span class="updated">
            (Updated: {formatDate(post.data.updatedDate)})
          </span>
        )}
      </div>
      {post.data.tags && (
        <div class="post-tags">
          {post.data.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="content">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .back-link {
    display: inline-block;
    color: var(--color-text-muted);
    font-size: 0.9rem;
    margin-bottom: 2rem;
  }

  .back-link:hover {
    color: var(--color-accent);
  }

  header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  header h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .post-meta time {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .updated {
    color: var(--color-text-muted);
    font-size: 0.85rem;
    font-style: italic;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.8rem;
    color: var(--color-accent);
    background: rgba(59, 130, 246, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
  }

  .content {
    line-height: 1.8;
  }

  .content :global(h1),
  .content :global(h2),
  .content :global(h3),
  .content :global(h4) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-weight: 600;
  }

  .content :global(h1) {
    font-size: 2rem;
  }

  .content :global(h2) {
    font-size: 1.5rem;
  }

  .content :global(h3) {
    font-size: 1.25rem;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
    color: var(--color-text-muted);
  }

  .content :global(p:has(img)) {
    margin-bottom: 0;
  }

  .content :global(ul),
  .content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
    color: var(--color-text-muted);
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(strong) {
    color: var(--color-text);
    font-weight: 600;
  }

  .content :global(em) {
    font-style: italic;
  }

  .content :global(a) {
    color: var(--color-accent);
  }

  .content :global(a:hover) {
    color: var(--color-accent-hover);
  }

  .content :global(code) {
    font-family: var(--font-mono);
    background: var(--color-bg-secondary);
    padding: 0.125rem 0.375rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .content :global(pre) {
    background: var(--color-bg-secondary);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1rem 0 0 0;
  }

  .content :global(img + em) {
    display: block;
    margin-top: 0.25rem;
    margin-bottom: 1rem;
    font-size: 0.85rem;
  }

  .content :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .content :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }

  @media (max-width: 768px) {
    header h1 {
      font-size: 1.75rem;
    }
  }
</style>
